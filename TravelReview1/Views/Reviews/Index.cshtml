@model IEnumerable<TravelReview1.Models.Review>

@{
    ViewBag.Title = "Index";
}

<h1 class="Headliner">Winner Vacation Reviews</h1><!--header for review-->
<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="row">

    @foreach (var item in Model)
    {
        <div class="col-md-3">

            <div class="thumbnail">

                <img src="~/images/10491274_10153531126391564_5192071980918309480_n.jpg" /><!--review image-->
                <div class="caption">

                    
                    <h3>@Html.DisplayFor(modelItem => item.Category.Travel_Category)</h3><!--Travel Category-->
                    <h3>@Html.DisplayFor(modelItem => item.Location)</h3><!--Location that reviewer has visited-->
                    <h3>@Html.DisplayFor(modelItem => item.Comments)</h3><!--The comments the Reviewer gives-->
                    <h3>@Html.DisplayFor(modelItem => item.Name)</h3><!--Name of Reviewer-->
                    <h3>@Html.DisplayFor(modelItem => item.Date)</h3><!--Date and Time stamp of review-->


                    @Html.ActionLink("Details", "Details", new { id = item.ID }, new { @class = "btn btn-warning", role = "button" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "btn btn-danger", role = "button" })
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "btn btn-primary", role = "button" })
                </div>
                </div>
                 </div>
                    }
             </div>

